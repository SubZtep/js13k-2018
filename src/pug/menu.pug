
//- Big back circle
a-circle#mc(
	material="shader:gradient;side:both;exponent:1.3;offset:2.2;topColor:183 65 14;bottomColor:0 0 0"
	radius="4"
	position="0 0 -6"
	roughness="1")
	a-animation(
		begin="coff"
		attribute="scale"
		to="0 0 0"
		dur="500"
		easing="ease-out")
	a-animation(
		begin="con"
		attribute="scale"
		to="1 1 1"
		dur="300"
		easing="ease-in")


//- Rest of the menu
a-entity#menu(position="0 1 -0.5")

	//- Title Text
	a-text(
		mixin="title"
		color="#661100"
		position="0 1.5 -5.1")
		a-animation(mixin="trot")
	a-text(
		mixin="title")
		a-animation(
			attribute="color"
			from="#fff"
			to="#660000"
			easing="ease-in"
			dur="6000"
			repeat="indefinite")

	//- Details text
	a-text.story(mixin="story" color="#551100" position="0 -0.6 -5.1")
		a-animation(mixin="trot")
	a-text.story(mixin="story")

	// Start button (desktop)
	a-cylinder#spc.obs(
		position="-5.5 0.5 -6.5"
		color="#4682B4"
		height="4"
		radius="0.9"
		metalness="0.3"
		opacity="0.5"
		roughness="1")
		a-text(
			position="0 0 0"
			rotation="5 35 0"
			value="Station"
			align="center"
			width="8"
			letter-spacing="10"
			negate="false")

	// Start button (mobile)
	a-cylinder#smob.obs(
		position="5.5 0.5 -6.5"
		color="#4682B4"
		height="4"
		radius="0.9"
		metalness="0.3"
		opacity="0.5"
		roughness="1")
		a-text(
			position="0 0 0"
			rotation="5 -35 0"
			value="Roaming"
			align="center"
			width="6.3"
			letter-spacing="10"
			negate="false")

	//- Credits
	a-text(
		align="center"
		color="#444444"
		width="3"
		value="by @SubZtep - Js13kGames @ 2018"
		position="0 -3.5 -5.5")
	a-text(
		align="center"
		color="#333333"
		width="2.5"
		value="thx4 Starlin (design ideas) + robot0001 (math ideas)"
		position="0 -3.85 -5.5")
